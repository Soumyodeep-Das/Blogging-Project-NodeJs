<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h5>Comments</h5>
        </div>
        <div class="card-body">
            <% comment.forEach(element => { %>
                <% if (element.createdBy && element.createdBy.fullName) { %>
                    <h4><%= element.createdBy.fullName %></h4>
                <% } else { %>
                    <h4><%= element.createdByFullName %></h4>
                <% } %>
                <pre><%= element.content %></pre>
                ------------------------------------------------------------
            <% }) %>
        </div>
        
        
        </div>
    </div>
</div>